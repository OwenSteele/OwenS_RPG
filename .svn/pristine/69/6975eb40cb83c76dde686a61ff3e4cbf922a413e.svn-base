<Window
    x:Class="WPFUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Engine.ViewModels;assembly=Engine"
    Title="Owen's Game"
    Width="800"
    Height="768"
    d:DataContext="{d:DesignInstance viewModels:GameSession}"
    FontSize="11pt"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  MENU  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue"
            Content="Menu" />

        <!--  PLAYER STATS  -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Background="Aquamarine">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Name:" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.Name}" />
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Content="Class:" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.CharacterClass}" />
            <Label
                Grid.Row="2"
                Grid.Column="0"
                Content="Hit Points:" />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.CurrentHitPoints}" />
            <Label
                Grid.Row="3"
                Grid.Column="0"
                Content="Gold:" />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.Gold}" />
            <Label
                Grid.Row="4"
                Grid.Column="0"
                Content="XP:" />
            <Label
                Grid.Row="4"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.ExperiencePoints}" />
            <Label
                Grid.Row="5"
                Grid.Column="0"
                Content="Level:" />
            <Label
                Grid.Row="5"
                Grid.Column="1"
                Content="{Binding CurrentPlayer.Level}" />
        </Grid>

        <!--  GAMEPLAY  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="Beige">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  GAME MESSAGES  -->
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                BorderBrush="Gainsboro"
                BorderThickness="1">

                <RichTextBox
                    x:Name="GameMessages"
                    Background="Beige"
                    VerticalScrollBarVisibility="Auto">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>

            </Border>

            <!--  LOCATION INFO  -->
            <Border
                Grid.Row="0"
                Grid.Column="1"
                BorderBrush="Gainsboro"
                BorderThickness="1" />
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Text="{Binding CurrentLocation.Name}" />
                <Image
                    Grid.Row="1"
                    Width="125"
                    Height="125"
                    HorizontalAlignment="Center"
                    Source="{Binding CurrentLocation.ImageName}" />
                <TextBlock
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Text="{Binding CurrentLocation.Description}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Border
                    Grid.Row="0"
                    BorderBrush="Gainsboro"
                    BorderThickness="1" />
                <Border
                    Grid.Row="1"
                    BorderBrush="Gainsboro"
                    BorderThickness="1" />
                <Border
                    Grid.Row="2"
                    BorderBrush="Gainsboro"
                    BorderThickness="1" />
            </Grid>

            <!--  MONSTER INFO  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="Gainsboro"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        FontWeight="Bold"
                        Text="{Binding CurrentMonster.Name}" />
                    <Image
                        Grid.Row="1"
                        Width="125"
                        Height="125"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="{Binding CurrentMonster.ImageName}" />
                    <StackPanel
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">
                        <TextBlock FontWeight="Bold">Current Hit Points:</TextBlock>
                        <TextBlock FontWeight="Bold" Text="{Binding CurrentMonster.CurrentHitPoints}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  INVENTORY and QUESTS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Background="BurlyWood">
            <TabControl>

                <!--  INVENTORY  -->
                <TabItem Header="Inventory">
                    <DataGrid
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding CurrentPlayer.GroupedInventory}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                IsReadOnly="True"
                                Binding="{Binding Item.Name}"
                                Header="Description"/>
                            <DataGridTextColumn
                                Width="auto"
                                IsReadOnly="True"
                                Binding="{Binding Quantity}"
                                Header="Qty" />
                            <DataGridTextColumn
                                Width="Auto"
                                IsReadOnly="True"
                                Binding="{Binding Item.Price}"
                                Header="Value"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!--  QUESTS  -->
                <TabItem Header="Quests">
                    <DataGrid
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding CurrentPlayer.Quests}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding PlayerQuest.Name}"
                                Header="Name" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding IsCompleted}"
                                Header="Done?" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!--  ACTION CONTROLS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Background="Lavender">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="255" />
            </Grid.ColumnDefinitions>

            <!--  COMBAT CONTROLS  -->
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="0"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding CurrentPlayer.Weapons}"
                    SelectedItem="{Binding CurrentWeapon}"
                    SelectedValuePath="ID" />

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="OnClick_AttackMonster"
                    Content="Use" />
            </Grid>

            <!--  BUTTONS  -->
            <Grid
                Grid.Row="2"
                Grid.Column="1"
                Background="Lavender">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="255" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  TRADER BUTTON  -->
                    <Button
                        Grid.Row="0" Grid.Column="0"
                        Width="65" Height="55" Margin="0" Padding="0"
                        Background="Lavender" BorderThickness="0"
                        Click="OnClick_DisplayTraderScreen"
                        Visibility="{Binding HasTrader, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonTrader}" />
                        </StackPanel>
                    </Button>

                    <!--  MAP BUTTON  -->
                    <Button
                        Grid.Row="0" Grid.Column="2"
                        Width="65" Height="55" Margin="0" Padding="0"
                        Background="Lavender" BorderThickness="0"
                        Click="OnClick_DisplayMapScreen">
                        <StackPanel>
                            <Image Source="{Binding ButtonTrader}" />
                        </StackPanel>
                    </Button>

                    <!--  MOVEMENT BUTTONS  -->
                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveNorth"
                        Visibility="{Binding HasLocationToNorth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonNorth}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveWest"
                        Visibility="{Binding HasLocationToWest, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonWest}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveEast"
                        Visibility="{Binding HasLocationToEast, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonEast}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveSouth"
                        Visibility="{Binding HasLocationToSouth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonSouth}" />
                        </StackPanel>
                    </Button>

                    <!--  Current Coordinates  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentLocation.XCoordinate}" TextAlignment="Right" />
                        <TextBlock Text="," TextAlignment="Center" />
                        <TextBlock Text="{Binding CurrentLocation.YCoordinate}" TextAlignment="Left" />
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
