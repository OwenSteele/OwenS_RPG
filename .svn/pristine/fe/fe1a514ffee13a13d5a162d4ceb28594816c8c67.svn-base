<Window
    x:Class="WPFUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Engine.ViewModels;assembly=Engine"
    Title="Owen's Game"
    Width="800"
    Height="768"
    d:DataContext="{d:DesignInstance viewModels:GameSession}"
    FontFamily="Times New Roman"
    FontSize="12pt"
    FontWeight="SemiBold"
    mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  MENU  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue"
            Content="Menu" />

        <!--  PLAYER STATS  -->
        <Grid Grid.Row="1" Grid.Column="0">

            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="LightGray" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="LightGray" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>

                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Grid.ColumnSpan="3">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundPlayerStatsEdge}" Stretch="UniformToFill" />
                </Grid.Background>
            </Grid>

            <!--  Main  -->
            <Grid Grid.Row="1" Grid.Column="1">

                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundPlayerStatsCenter}" Stretch="UniformToFill" />
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    FontSize="16pt"
                    HorizontalAlignment="Left"
                    Content="{Binding CurrentPlayer.Name}" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    FontSize="16pt"
                    Content="{Binding CurrentPlayer.CharacterClass}" />

                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <ProgressBar
                        MinHeight="20"
                        Margin="5"
                        Background="DarkRed"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="3"
                        Foreground="DarkGreen"
                        Maximum="{Binding CurrentPlayer.MaximumHitPoints}"
                        Value="{Binding CurrentPlayer.CurrentHitPoints}" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentPlayer.CurrentHitPoints}" />
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text=" / " />
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentPlayer.MaximumHitPoints}" />
                    </StackPanel>
                </Grid>

                <Image
                    Grid.Row="3"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    MinHeight="18" MinWidth="40"
                    Source="{Binding BackgroundPlayerStatsGoldIcon}" />
                
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    FontSize="16pt"
                    Content="{Binding CurrentPlayer.Gold}" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    FontSize="16pt"
                    Content="XP:" />

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Label FontSize="16pt" Content="{Binding CurrentPlayer.ExperiencePoints}" />
                    <Label FontSize="16pt" Content="/" />
                    <Label FontSize="16pt" Content="{Binding CurrentPlayer.NextLevelExperiencePoints}" />
                </StackPanel>

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    FontSize="16pt"
                    Content="Level:" />
                <Label
                    Grid.Row="5"
                    Grid.Column="1"
                    FontSize="16pt"
                    Content="{Binding CurrentPlayer.Level}" />
            </Grid>
        </Grid>
        <!--  GAMEPLAY  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="Beige">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  GAME MESSAGES  -->
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="3">
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding BackgroundGameMessagesCenter}" Stretch="Fill" />
                        </Grid.Background>
                    </Grid>

                    <!--  Main  -->
                    <RichTextBox
                        x:Name="GameMessages"
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Arrow"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0" />
                            </Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="PeachPuff" />
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Grid>
            </Border>

            <Grid Grid.Row="0" Grid.Column="1">
                <!--  LOCATION INFO  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1"/>
                <Grid
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding BackgroundLocationBackgroundCenter}" Stretch="Fill" />
                        </Grid.Background>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Padding="50,20,20,10"
                        HorizontalAlignment="right"
                        Text="{Binding CurrentLocation.Name}" />
                    <Grid Grid.Row="1">
                        <Image
                            Grid.Row="1"
                            Width="125"
                            Height="125"
                            HorizontalAlignment="Center"
                            Source="{Binding CurrentLocation.ImageName}" />
                    </Grid>
                    <TextBlock
                        Grid.Row="2"
                        Padding="20,10,50,15"
                        HorizontalAlignment="left"
                        Text="{Binding CurrentLocation.Description}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Border Grid.Row="0" />
                    <Border Grid.Row="1" />
                    <Border Grid.Row="2" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundCenter}" Stretch="Fill" />
                </Grid.Background>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>

                

                <!--  MONSTER INFO  -->
                <Border
                    Grid.Row="1"
                    Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundNameBanner}" Stretch="Fill" />
                        </Grid.Background>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.Background>
                                <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundNameBanner}" Stretch="Fill" />
                            </Grid.Background>
                        </Grid>
                        
                        <TextBlock
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Margin="5"
                            Text="{Binding CurrentMonster.Name}" 
                            Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}"/>
                        <Image
                            Grid.Row="1"
                            Width="125"
                            Height="125"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{Binding CurrentMonster.ImageName}" />
                                                
                        <ProgressBar
                            Grid.Row="2"
                        MinHeight="20"
                        Margin="15,15"
                        Background="DarkRed"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="3"
                        Foreground="DarkGreen"
                            Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}"
                        Maximum="{Binding CurrentMonster.MaximumHitPoints}"
                        Value="{Binding CurrentMonster.CurrentHitPoints}" />
                            <StackPanel
                                Grid.Row="2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                                Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">
                                <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentMonster.CurrentHitPoints}" />
                                <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text=" / " />
                                <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentMonster.MaximumHitPoints}" />
                            </StackPanel>

                        </Grid>
                </Border>
            </Grid>

        </Grid>

        <!--  INVENTORY and QUESTS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Background="BurlyWood">
            <TabControl>

                <!--  INVENTORY  -->
                <TabItem Header="Inventory">
                    <DataGrid
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding CurrentPlayer.GroupedInventory}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Item.Name}"
                                Header="Description"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Quantity}"
                                Header="Qty"
                                IsReadOnly="True" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Item.Price}"
                                Header="Value"
                                IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!--  QUESTS  -->
                <TabItem Header="Quests">
                    <DataGrid
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding CurrentPlayer.Quests}">
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding PlayerQuest.Name}"
                                Header="Name" />
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding IsCompleted}"
                                Header="Done?" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!--  ACTION CONTROLS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Background="Lavender">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="255" />
            </Grid.ColumnDefinitions>

            <Grid Grid.ColumnSpan="2">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundActionPanelBackgroundCenter}"/>
                </Grid.Background>
            </Grid>

            <!--  COMBAT CONTROLS  -->
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <ComboBox
                    Grid.Row="0"
                    Grid.Column="0"
                    DisplayMemberPath="Name"
                    Background="DarkSlateGray"
                    ItemsSource="{Binding CurrentPlayer.Weapons}"
                    SelectedItem="{Binding CurrentWeapon}"
                    SelectedValuePath="ID" />

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Click="OnClick_AttackMonster"
                    Content="Use" />
            </Grid>

            <!--  BUTTONS  -->
            <Grid
                Grid.Row="2"
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="255" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>

                    <!--  TRADER BUTTON  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="65"
                        Height="55"
                        Margin="0"
                        Padding="0"
                        BorderThickness="0"
                        Background="Transparent"
                        Click="OnClick_DisplayTraderScreen"
                        Visibility="{Binding HasTrader, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonTrader}" />
                        </StackPanel>
                    </Button>

                    <!--  MAP BUTTON  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="65"
                        Height="55"
                        Margin="0"
                        Padding="0"
                        BorderThickness="0"
                        Background="Transparent"
                        Click="OnClick_DisplayMapScreen">
                        <StackPanel>
                            <Image Source="{Binding ButtonMap}" />
                        </StackPanel>
                    </Button>

                    <!--  MOVEMENT BUTTONS  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveNorth"
                        Visibility="{Binding HasLocationToNorth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonNorth}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveWest"
                        Visibility="{Binding HasLocationToWest, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonWest}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveEast"
                        Visibility="{Binding HasLocationToEast, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonEast}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveSouth"
                        Visibility="{Binding HasLocationToSouth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonSouth}" />
                        </StackPanel>
                    </Button>

                    <!--  Current Coordinates  -->
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentLocation.XCoordinate}" TextAlignment="Right" />
                        <TextBlock Text="," TextAlignment="Center" />
                        <TextBlock Text="{Binding CurrentLocation.YCoordinate}" TextAlignment="Left" />
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
