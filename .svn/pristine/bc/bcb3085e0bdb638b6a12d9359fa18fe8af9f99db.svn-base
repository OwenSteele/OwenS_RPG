<Window
    x:Class="WPFUI.Map"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:Windows="clr-namespace:System.Windows;assembly=PresentationCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Engine.ViewModels;assembly=Engine"
    Title="Map"
    Width="500"
    Height="450"
    FontFamily="Times New Roman"
    FontWeight="Bold"
    d:DataContext="{d:DesignInstance viewModels:GameSession}"
    mc:Ignorable="d">

    <!--  OVERALL - MAP AND CLOSE BUTTON  -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <!--  MAP  -->
        <Grid
            Name="MapGrid"
            Loaded="OnLoad_MapGrid"
            ShowGridLines="True">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" 
                            ImageSource="{Binding MapBackgroundMainOverallBackground}"/>
            </Grid.Background>
        </Grid>
        <TextBlock Grid.Row="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" Text="'M' = Monster. 'T' = Trader. 'Q' = Quest."/>
        <Button
            Grid.Row="1"
            MaxWidth="75"
            MaxHeight="25"
            HorizontalAlignment="Right"
            Click="OnClick_Close"
            Content="Close" />
    </Grid>
</Window>
