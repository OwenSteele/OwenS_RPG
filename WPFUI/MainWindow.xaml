<Window
    x:Class="GameEngine.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GameEngine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Engine.ViewModels;assembly=Engine"
    Title="Owen's Game"
    Width="800"
    Height="768"
    d:DataContext="{d:DesignInstance viewModels:GameSession}"
    WindowStartupLocation="CenterScreen"
    FontFamily="Times New Roman"
    FontSize="12pt"
    FontWeight="SemiBold"
    mc:Ignorable="d"
    KeyDown="MainWindow_OnKeyDown">

    <Window.Resources>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        
    </Window.Resources>

    <Grid
            Loaded="OnLoad_MainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  MENU  -->
        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Background="AliceBlue"
            Content="Menu"/>
        <Button
            Grid.Row="0"
            Grid.Column="1"
            Width="100"
            MaxHeight="25"
            HorizontalAlignment="Right"
            Click="OnClick_DisplayTutorialScreen"
            BorderBrush="Transparent"
            Background="Transparent"
            Content="Help"/>
        
        <!--  PLAYER STATS  -->
        <Grid Grid.Row="1" Grid.Column="0">

            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="LightGray" />
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="LightGray" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>

                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Grid.ColumnSpan="3">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundPlayerStatsEdge}" Stretch="UniformToFill" />
                </Grid.Background>
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="1">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundPlayerStatsCenter}" Stretch="UniformToFill" />
                </Grid.Background>
            </Grid>

            <!--  Main  -->
            <Grid Grid.Row="1" Grid.Column="1" Visibility="Hidden" x:Name="PlayerStatsGrid">


                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Content="{Binding CurrentPlayer.Name}"
                    ToolTip="This is you!"
                    FontSize="16pt" />
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Content="{Binding CurrentPlayer.CharacterClass.Name}"
                    ToolTip="This is your class, each one has different starting attributes."
                    FontSize="16pt" />
                

                <Grid Grid.Row="2" Grid.ColumnSpan="2">
                    <ProgressBar
                        MinHeight="20"
                        Margin="5"
                        Background="DarkRed"
                        BorderBrush="DarkSlateGray"
                        BorderThickness="3"
                        Foreground="DarkGreen"
                        Maximum="{Binding CurrentPlayer.MaximumHitPoints}"
                        Value="{Binding CurrentPlayer.CurrentHitPoints}" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentPlayer.CurrentHitPoints}" />
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text=" / " />
                        <TextBlock
                            FontSize="14pt"
                            Foreground="LightGray"
                            Text="{Binding CurrentPlayer.MaximumHitPoints}" />
                    </StackPanel>
                </Grid>

                <Image
                    Grid.Row="3"
                    Grid.Column="0"
                    MinWidth="40"
                    MinHeight="18"
                    HorizontalAlignment="Right"
                    Source="{Binding BackgroundPlayerStatsGoldIcon}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    Content="{Binding CurrentPlayer.Gold}"
                    FontSize="16pt" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Content="XP:"
                    FontSize="16pt" />

                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Label Content="{Binding CurrentPlayer.ExperiencePoints}" FontSize="16pt" />
                    <Label Content="/" FontSize="16pt" />
                    <Label Content="{Binding CurrentPlayer.NextLevelExperiencePoints}" FontSize="16pt" />
                </StackPanel>

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    Content="Level:"
                    FontSize="16pt" />
                <Label
                    Grid.Row="5"
                    Grid.Column="1"
                    Content="{Binding CurrentPlayer.Level}"
                    FontSize="16pt" />
                <Label
                    Grid.Row="6"
                    Grid.Column="0"
                    HorizontalAlignment="right"
                    Content="Dexterity:"
                    ToolTip="Affects your ability in combat."
                    FontSize="16pt" />
                <Label
                    Grid.Row="6"
                    Grid.Column="1"
                    HorizontalAlignment="left"
                    Content="{Binding CurrentPlayer.Dexterity}"
                    FontSize="16pt" />

                <RichTextBox
                        x:Name="PlayerMessages"
                        Grid.Row="8"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        MinWidth="158"
                        HorizontalAlignment="Stretch"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="None"
                        IsReadOnly="True"
                        Margin="5"
                        Foreground="DarkRed"
                        VerticalScrollBarVisibility="Disabled"
                        Visibility="Hidden">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="TextAlignment" Value="Center" />
                            <Setter Property="Margin" Value="10" />
                        </Style>
                        <Style TargetType="RichTextBox">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </RichTextBox.Resources>
                    <RichTextBox.Background>
                        <ImageBrush ImageSource="{Binding BackgroundGameMessagesCenter}"/>
                    </RichTextBox.Background>
                </RichTextBox>

            </Grid>
        </Grid>
        <!--  GAMEPLAY  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="Beige">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  GAME MESSAGES  -->
            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Grid.ColumnSpan="3">
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding BackgroundGameMessagesCenter}" Stretch="Fill" />
                        </Grid.Background>
                    </Grid>

                    <!--  Main  -->
                    <RichTextBox
                        x:Name="GameMessages"
                        Grid.Row="1"
                        Grid.Column="1"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Cursor="Arrow"
                        IsReadOnly="True"
                        VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0" />
                            </Style>
                            <Style TargetType="ScrollBar">
                                <Setter Property="Background" Value="PeachPuff" />
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Grid>
            </Border>

            <Grid Grid.Row="0" Grid.Column="1">
                <!--  LOCATION INFO  -->
                <Border Grid.Row="1" Grid.Column="1" />
                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0">
                        <Grid.Background>
                            <ImageBrush ImageSource="{Binding BackgroundLocationBackgroundCenter}" Stretch="Fill" />
                        </Grid.Background>
                    </Grid>

                    <TextBlock
                        Grid.Row="0"
                        Padding="50,20,20,10"
                        HorizontalAlignment="right"
                        Text="{Binding CurrentLocation.Name}" />
                    <Grid Grid.Row="1">
                        <Image
                            Width="125"
                            Height="125"
                            HorizontalAlignment="Center"
                            Source="{Binding CurrentLocation.ImageFileName,
                        Converter={StaticResource FileToBitmapConverter}}"/>

                    </Grid>
                    <TextBlock
                        Grid.Row="2"
                        Padding="20,10,50,15"
                        HorizontalAlignment="left"
                        Text="{Binding CurrentLocation.Description}"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Border Grid.Row="0" />
                    <Border Grid.Row="1" />
                    <Border Grid.Row="2" />
                </Grid>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">

                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundCenter}" Stretch="Fill" />
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="10" />
                </Grid.ColumnDefinitions>



                <!--  MONSTER INFO  -->
                <Border Grid.Row="1" Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.Background>
                                <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundNameBanner}" Stretch="Fill" />
                            </Grid.Background>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.Background>
                                <ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundNameBanner}" Stretch="Fill" />
                            </Grid.Background>
                        </Grid>

                        <TextBlock
                            Grid.Row="0"
                            Margin="5"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding CurrentMonster.Name}"
                            Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}" />
                        <Image
                            Grid.Row="1"
                            Width="125"
                            Height="125"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="{Binding CurrentMonster.ImageFileName}"/>

                        <ProgressBar
                            Grid.Row="2"
                            MinHeight="20"
                            Margin="15,15"
                            Background="DarkRed"
                            BorderBrush="DarkSlateGray"
                            BorderThickness="3"
                            Foreground="DarkGreen"
                            Maximum="{Binding CurrentMonster.MaximumHitPoints}"
                            Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}"
                            Value="{Binding CurrentMonster.CurrentHitPoints}" />
                        <StackPanel
                            Grid.Row="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">
                            <TextBlock
                                FontSize="14pt"
                                Foreground="LightGray"
                                Text="{Binding CurrentMonster.CurrentHitPoints}" />
                            <TextBlock
                                FontSize="14pt"
                                Foreground="LightGray"
                                Text=" / " />
                            <TextBlock
                                FontSize="14pt"
                                Foreground="LightGray"
                                Text="{Binding CurrentMonster.MaximumHitPoints}" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Grid>

        </Grid>

        <!--  INVENTORY and QUESTS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="0"
            Background="BurlyWood">
            <TabControl>

                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Background" Value="LightGoldenrodYellow"/>
                        <Setter Property="Foreground" Value="DarkSlateGray"/>
                    </Style>
                </TabControl.Resources>

                <TabControl.Background>
                    <!--<ImageBrush ImageSource="{Binding BackgroundMonsterBackgroundCenter}"/>-->
                    <SolidColorBrush Color="DarkSlateGray"/>
                </TabControl.Background>
                
                <!--  INVENTORY  -->
                <TabItem>

                    <TabItem.Header>
                        <Image Source="{Binding ButtonInventoryTabBackpack}" Width="27" Height="27"/>
                    </TabItem.Header>

                    <DataGrid
                        GridLinesVisibility="None"
                        Background="Transparent"
                        BorderThickness="0"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        IsReadOnly="true"
                        HorizontalScrollBarVisibility="Hidden"
                        ItemsSource="{Binding CurrentPlayer.Inventory.GroupedInventoryItems}"
                        >
                        
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="SlateGray"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Item.Name}"
                                IsReadOnly="True"
                                Header="Item"
                                CanUserReorder="false"
                                CanUserResize="false">

                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="ToolTip"
                                Value="{Binding ToolTipContents}"/>
                                    </Style>
                                </DataGridTextColumn.CellStyle>

                            </DataGridTextColumn>
                            
                            <DataGridTextColumn
                                Width="auto"
                                Binding="{Binding Quantity}"
                                IsReadOnly="True"
                                Header="Qty"
                                CanUserReorder="false"
                                CanUserResize="false" />
                            
                            <DataGridTextColumn
                                Width="Auto"
                                Binding="{Binding Item.Price}"
                                IsReadOnly="True"
                                Header="Value"
                                CanUserReorder="false"
                                CanUserResize="false">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!--  QUESTS  -->
                <TabItem>
                    
                    <TabItem.Header>
                        <Image Source="{Binding ButtonInventoryTabQuests}" Width="27" Height="27"/>
                    </TabItem.Header>
                    
                    <DataGrid
                        GridLinesVisibility="None"
                        Background="Transparent"
                        BorderThickness="0"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        IsReadOnly="true"
                        ItemsSource="{Binding CurrentPlayer.Quests}">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="SlateGray"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding PlayerQuest.Name}"
                                Header="Name" 
                                CanUserReorder="false"
                                CanUserResize="false">

                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="ToolTip"
                                Value="{Binding PlayerQuest.ToolTipContents}"/>
                                    </Style>
                                </DataGridTextColumn.CellStyle>
                                
                            </DataGridTextColumn>
                            
                        <DataGridTextColumn Header="Done?"
                                Binding="{Binding IsCompleted, Mode=OneWay}"
                                Width="Auto"/>
                            
                        </DataGrid.Columns>
                        
                    </DataGrid>
                </TabItem>

                <!--  RECIPES  -->
                <TabItem>

                    <TabItem.Header>
                        <Image Source="{Binding ButtonInventoryTabRecipes}" Width="27" Height="27"/>
                    </TabItem.Header>

                    <DataGrid
                        GridLinesVisibility="None"
                        Background="Transparent"
                        BorderThickness="0"
                        AutoGenerateColumns="False"
                        HeadersVisibility="Column"
                        ItemsSource="{Binding RelativeSource=
                        {RelativeSource FindAncestor, AncestorType={x:Type TabControl}}, 
                        Path=DataContext.CurrentPlayer.Recipes}">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="SlateGray"/>
                                <Setter Property="Foreground" Value="LightGoldenrodYellow"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Name}"
                                Header="Name"
                                IsReadOnly="true" 
                                CanUserReorder="false"
                                CanUserResize="false">

                                <DataGridTextColumn.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="ToolTip"
                                Value="{Binding ToolTipContents}"/>
                                    </Style>
                                </DataGridTextColumn.CellStyle>

                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn MinWidth="75"
                                CanUserReorder="false"
                                CanUserResize="false">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button
                                            Width="55"
                                            Click="OnClick_Craft"
                                            BorderThickness="0"
                                            Content="Craft">
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!--  ACTION CONTROLS  -->
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Background="Lavender">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="255" />
            </Grid.ColumnDefinitions>

            <Grid Grid.ColumnSpan="2">
                <Grid.Background>
                    <ImageBrush ImageSource="{Binding BackgroundActionPanelBackgroundCenter}" />
                </Grid.Background>
            </Grid>

            <!--  COMBAT CONTROLS  -->
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <!--  Attack  -->

                <ComboBox Name="ComboBoxAttack"
                    Grid.Row="0"
                    Grid.Column="0"
                    MaxHeight="25"
                    Background="DarkSlateGray"
                    DisplayMemberPath="Name"
                    ItemsSource="{Binding CurrentPlayer.Inventory.Weapons}"
                    SelectedItem="{Binding CurrentPlayer.CurrentWeapon}"
                    SelectedValuePath="ID"
                    Text="Bare Hands"
                    Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">
                </ComboBox>

                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="OnClick_AttackMonster"
                    Visibility="{Binding HasMonster, Converter={StaticResource BooleanToVisibility}}">
                    <StackPanel>
                        <Image Source="{Binding ButtonAttack}" />
                    </StackPanel>
                </Button>

                <!--  Consumables  -->
                <ComboBox
                    Name="ComboBoxConsumables"
                    Grid.Row="1"
                    Grid.Column="0"
                    MaxHeight="25"
                    Background="DarkSlateGray"
                    ItemsSource="{Binding CurrentPlayer.Inventory.Consumables}"
                    SelectedItem="{Binding CurrentPlayer.CurrentGroupedConsumable}"
                    SelectedValuePath="ID"
                    Visibility="{Binding CurrentPlayer.Inventory.HasConsumable, Converter={StaticResource BooleanToVisibility}}" 
                    BorderBrush="#FF380707">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}x {1}">
                                        <Binding Path="Quantity"/>
                                        <Binding Path="Item.Name"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="OnClick_UseCurrentConsumable"
                    Visibility="{Binding CurrentPlayer.Inventory.HasConsumable, Converter={StaticResource BooleanToVisibility}}">
                    <StackPanel>
                        <Image Source="{Binding ButtonUseConsumable}" />
                    </StackPanel>
                </Button>
            </Grid>

            <!--  BUTTONS  -->
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="255" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>

                    <!--  TRADER BUTTON  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="65"
                        Height="55"
                        Margin="0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="OnClick_DisplayTraderScreen"
                        Visibility="{Binding HasTrader, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonTrader}" />
                        </StackPanel>
                    </Button>

                    <!--  MAP BUTTON  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="65"
                        Height="55"
                        Margin="0"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="OnClick_DisplayMapScreen">
                        <StackPanel>
                            <Image Source="{Binding ButtonMap}" />
                        </StackPanel>
                    </Button>

                    <!--  MOVEMENT BUTTONS  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveNorth"
                        Visibility="{Binding HasLocationToNorth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonNorth}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="2"
                        Grid.Column="0"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveWest"
                        Visibility="{Binding HasLocationToWest, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonWest}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveEast"
                        Visibility="{Binding HasLocationToEast, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonEast}" />
                        </StackPanel>
                    </Button>

                    <Button
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="65"
                        Height="55"
                        Margin="10"
                        Click="OnClick_MoveSouth"
                        Visibility="{Binding HasLocationToSouth, Converter={StaticResource BooleanToVisibility}}">
                        <StackPanel>
                            <Image Source="{Binding ButtonSouth}" />
                        </StackPanel>
                    </Button>

                    <!--  Current Coordinates  -->
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Text="{Binding CurrentLocation.XCoordinate}" TextAlignment="Right" />
                        <TextBlock Text="," TextAlignment="Center" />
                        <TextBlock Text="{Binding CurrentLocation.YCoordinate}" TextAlignment="Left" />
                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
